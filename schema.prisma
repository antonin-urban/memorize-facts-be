datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique @default("")
  password String
  isAdmin  Boolean @default(false)
}

model Fact {
  id          String     @id @default(uuid())
  name        String     @default("")
  description String     @default("")
  deadline    DateTime?
  active      Boolean    @default(false)
  schedules   Schedule[] @relation("Fact_schedules")
  tags        Tag[]      @relation("Fact_tags")
  ownerId     String     @default("")
}

model Tag {
  id             String @id @default(uuid())
  name           String @default("")
  ownerId        String @default("")
  from_Fact_tags Fact[] @relation("Fact_tags")
}

model Schedule {
  id                  String  @id @default(uuid())
  name                String  @default("")
  type                String  @default("NOTIFY_EVERY")
  scheduleParameters  String? @default("{\"interval\":0,\"notifyTimes\":[\"9:00\",\"12:00\",\"18:00\"],\"dayOfWeek\":[0,1,2,3,4,5,6]}")
  ownerId             String  @default("")
  from_Fact_schedules Fact[]  @relation("Fact_schedules")
}